<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 선택된 상태 -->
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="#FF6200EE" /> <!-- 체크된 상태 색상 -->
            <stroke android:width="2dp" android:color="#000000" /> <!-- 테두리 -->
        </shape>
    </item>
    <!-- 기본 상태 -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" /> <!-- 기본 배경 -->
            <stroke android:width="2dp" android:color="#000000" /> <!-- 테두리 -->
        </shape>
    </item>
</selector>